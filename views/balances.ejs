<link rel="stylesheet" type="text/css" href="/css/style.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


<div style="width: 100%; text-align: center">
    <div class="header mb-3">
        <h1>Smart Online Investements</h1>
    </div>

    <div class="container mb-3">
        <h2>Account details</h2>
        <p>
            <strong> Details for account with id: </strong> <%= account.accountId %>
        </p>

        <h3>Account balance</h3>
        <p>
            <strong> Currency: </strong> <%= account.currency %>
        </p>
        <p>
            <strong> Available balance:</strong> <%= account.balances[0].amount %>
        </p>
        <p>
            <strong> Current balance: </strong> <%= account.balances[1].amount %>
        </p>
        <hr>
        <button class="btn btn-primary mb-3" onclick="location.href = '/'">Go back</button>
        <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                </tr>
                <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
                </tr>
                <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>@twitter</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>