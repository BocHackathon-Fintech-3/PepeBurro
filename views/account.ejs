<link rel="stylesheet" type="text/css" href="/css/style.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script><link rel="stylesheet" type="text/css" href="/css/style.css">

<div style="width: 100%; text-align: center">
    <div class="header mb-3">
    	<h1>Smart Online Investements</h1>
  	</div>

    <div class="container mb-3">
        <h2>Investor account details</h2>
        <p>
            <strong> Details for account with id: </strong> <%= account.accountId %>
        </p>
        <p>
            <strong> Account holder: </strong> <%= account.accountName %>
        </p>
        <p>
            <strong> Account iban: </strong> <%= account.IBAN %>
        </p>
        <p>
            <strong> Account bank id: </strong> <%= account.bankId %>
        </p>
        <p>
            <strong> Account type: </strong> <%= account.accountType %>
        </p>
        <hr>
        <h3>Account balance</h3>
        <p>
            <strong> Currency: </strong> <%= account.currency %>
        </p>
        <p>
            <strong> Available balance: </strong> <%= account.balances[0].amount %>
        </p>
        <p>
            <strong> Current balance: </strong> <%= account.balances[1].amount %>
        </p>
        <hr>
        <% if(typeof account.additional_info != "undefined"){ %>
        <h3>Account additional info</h3>
        <p>
            <strong> Email address: </strong> <%= account.additional_info.email %>
        </p>
        <p>
            <strong> Phone number: </strong> <%= account.additional_info.phone %>
        </p>
        <p>
            <strong> Date of Birth: </strong> <%= account.additional_info.birth_date %>
        </p>
        <p>
            <strong> Place of Birth: </strong> <%= account.additional_info.birth_place %>
        </p>
        <p>
            <strong> Company name: </strong> <%= account.additional_info.company %>
        </p>
        <p>
            <strong> Field of work: </strong> <%= account.additional_info.job %>
        </p>
        <p>
            <strong> Monthly savings (in EUR): </strong> <%= account.additional_info.savings %>
        </p>
        <p>
            <strong> Default stock: </strong> <%= account.additional_info.stocks %>
        </p>
        <hr>
        <%}%>
        <button class="btn btn-primary" onclick="location.href = '/'">Go back</button>
    </div>
</div>